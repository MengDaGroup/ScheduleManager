<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rate_shape_bcorners_8_solid_ffffff"
    android:layout_marginBottom="@dimen/widget_dp_4">

    <TextView
        android:id="@+id/rate_tv_update_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/widget_color_ffffff"
        android:paddingLeft="@dimen/widget_dp_10"
        android:paddingRight="@dimen/widget_dp_10"
        android:textSize="@dimen/widget_sp_14"
        android:paddingBottom="@dimen/widget_dp_4"
        android:paddingTop="@dimen/widget_dp_4"
        android:background="@drawable/rate_shape_solid_ff9912_lr15"/>

    <TextView
        android:id="@+id/rate_tv_update_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/widget_sp_14"
        android:textColor="@color/widget_color_2e2e2e"
        android:layout_toLeftOf="@id/rate_tv_update_user"
        android:layout_marginLeft="@dimen/widget_dp_15"
        android:layout_marginRight="@dimen/widget_dp_15"
        android:layout_marginTop="@dimen/widget_dp_10"
        android:lineSpacingExtra="@dimen/widget_dp_4"
        android:paddingBottom="@dimen/widget_dp_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dp_1"
        android:background="@color/widget_color_f5f5f5"
        android:layout_toLeftOf="@id/rate_tv_update_user"
        android:layout_marginLeft="@dimen/widget_dp_15"
        android:layout_below="@id/rate_tv_update_notes"/>

    <TextView
        android:id="@+id/rate_tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/widget_sp_12"
        android:paddingTop="@dimen/widget_dp_10"
        android:textColor="@color/widget_color_666666"
        android:layout_below="@id/rate_tv_update_notes"
        android:layout_marginLeft="@dimen/widget_dp_15"
        android:paddingBottom="@dimen/widget_dp_10"
        />

</RelativeLayout>
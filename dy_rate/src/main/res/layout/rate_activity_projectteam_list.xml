<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.dayi35.recycle.view.DYRefreshView
        android:id="@+id/rate_rv_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/widget_color_f5f5f5"
        app:layout_empty="@layout/rate_layout_emptyproject"
        android:paddingBottom="@dimen/widget_dp_10"/>

    <Button
        android:id="@+id/rate_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/widget_dp_30"
        android:layout_marginBottom="@dimen/widget_dp_50"
        android:textColor="@color/widget_color_ffffff"
        android:background="@drawable/widget_sele_redbutton"/>

</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="rate_them" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rate_wh_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rate_etinput_style">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/widget_sp_14</item>
        <item name="android:textColor">@color/widget_color_2e2e2e</item>
        <item name="android:textColorHint">@color/widget_color_999999</item>
        <item name="android:layout_height">@dimen/widget_dp_53</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
    </style>

    <!--edit-->
    <style name="rate_et2e2e2e_h999999_style" parent="rate_wh_mw">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginLeft">@dimen/widget_dp_10</item>
        <item name="android:textColor">@color/widget_color_2e2e2e</item>
        <item name="android:textColorHint">@color/widget_color_999999</item>
    </style>

</resources>

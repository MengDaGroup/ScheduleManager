<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义titlebar-->
    <declare-styleable name="widget_titlebarview">
        <attr name="widget_leftdrawble" format="reference" />
        <attr name="widget_lefttext" format="string" />
        <attr name="widget_lefttextcolor" format="color" />
        <attr name="widget_centertextcolor" format="color" />
        <attr name="widget_centertitle" format="string" />
        <attr name="widget_righttextcolor" format="color" />
        <attr name="widget_righttext" format="string" />
        <attr name="widget_rightdrawable" format="reference" />
        <attr name="widget_bgcolor" format="color"/>
    </declare-styleable>

    <!--圆角imageview-->
    <declare-styleable name="widget_cricular_imageview">
        <attr name="widget_topleft1_radius" format="dimension" />
        <attr name="widget_topright1_radius" format="dimension" />
        <attr name="widget_bottomleft1_radius" format="dimension" />
        <attr name="widget_bottomright1_radius" format="dimension" />

        <attr name="widget_topleft2_radius" format="dimension" />
        <attr name="widget_topright2_radius" format="dimension" />
        <attr name="widget_bottomleft2_radius" format="dimension" />
        <attr name="widget_bottomright2_radius" format="dimension" />
    </declare-styleable>

    <!--圆形imgaeview-->
    <declare-styleable name="widget_circle_imageview">
        <attr name="widget_civ_border_width" format="dimension" />
        <attr name="widget_civ_border_color" format="color" />
        <attr name="widget_civ_border_overlay" format="boolean" />
        <attr name="widget_civ_fill_color" format="color" />
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="widget_tagflowview">
        <attr name="widget_selected_max" format="integer" />
        <attr name="widget_invert" format="boolean" />
        <attr name="widget_tag_margin" format="dimension" />
    </declare-styleable>


    <!--TableLayoutWidget-->
    <declare-styleable name="widget_tab_layout_widget">
        <attr name="widget_tab_text_size" format="dimension" />
        <attr name="widget_tab_text_color" format="color" />
        <attr name="widget_tab_text_sel_color" format="color" />
        <attr name="widget_tab_padding" format="dimension" />
        <attr name="widget_tab_margin" format="dimension" />
        <attr name="widget_is_tab_weight" format="boolean" />
        <attr name="widget_tab_text_sel_size" format="dimension" />
        <attr name="widget_tab_background_color" format="color" />
        <attr name="widget_tab_sel_background_color" format="color" />
        <attr name="widget_is_tab_text_animation" format="boolean" />
        <attr name="widget_indicator_width" format="dimension" />
        <attr name="widget_indicator_height" format="dimension" />
        <attr name="widget_indicator_color" format="color" />
        <attr name="widget_indicator_backgroud" format="integer" />
        <attr name="widget_text_sel_bold" format="boolean" />
        <attr name="widget_auto_scroll" format="boolean" />
        <attr name="widget_auto_padding" format="boolean" />
    </declare-styleable>

    <!--bannerview-->
    <declare-styleable name="widget_bannerview">
        <attr name="widget_open_mz_mode" format="boolean" />
        <attr name="widget_canLoop" format="boolean" />
        <attr name="widget_show_indicator" format="boolean" />
        <attr name="widget_default_view" format="boolean" />
        <attr name="widget_indicatorPaddingLeft" format="dimension" />
        <attr name="widget_indicatorPaddingRight" format="dimension" />
        <attr name="widget_indicatorPaddingTop" format="dimension" />
        <attr name="widget_indicatorPaddingBottom" format="dimension" />
        <attr name="widget_clipToPadding" format="boolean" />
        <attr name="widget_clipToPaddingLeft" format="dimension" />
        <attr name="widget_clipToPaddingRight" format="dimension" />
        <attr name="widget_clipToPaddingTop" format="dimension" />
        <attr name="widget_clipToPaddingBottom" format="dimension" />
        <attr name="widget_indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="widget_middle_page_cover" format="boolean" />
    </declare-styleable>

    <declare-styleable name="widget_loopview">
        <attr name="widget_view_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="widget_lineColor" format="color" />
        <attr name="widget_topBottomTextColor" format="color" />
        <attr name="widget_centerTextColor" format="color" />
        <attr name="widget_textSize" format="dimension" />
        <attr name="widget_loop_canLoop" format="boolean" />
        <attr name="widget_initPosition" format="integer" />
        <attr name="widget_drawItemCount" format="integer" />
        <attr name="widget_lineSpacingMultiplier" format="float" />


        <!--set number of item displayed, default is 3-->
        <attr name="widget_npv_ShowCount" format="reference|integer" />
        <!--set if show divider, default is true-->
        <attr name="widget_npv_ShowDivider" format="reference|boolean" />
        <attr name="widget_npv_DividerColor" format="reference|color" />
        <attr name="widget_npv_DividerMarginLeft" format="reference|dimension" />
        <attr name="widget_npv_DividerMarginRight" format="reference|dimension" />
        <attr name="widget_npv_DividerHeight" format="reference|dimension" />
        <attr name="widget_npv_TextColorNormal" format="reference|color" />
        <attr name="widget_npv_TextColorSelected" format="reference|color" />
        <attr name="widget_npv_TextColorHint" format="reference|color" />
        <attr name="widget_npv_TextSizeNormal" format="reference|dimension" />
        <attr name="widget_npv_TextSizeSelected" format="reference|dimension" />
        <attr name="widget_npv_TextSizeHint" format="reference|dimension" />
        <attr name="widget_npv_TextArray" format="reference" />
        <attr name="widget_npv_MinValue" format="reference|integer" />
        <attr name="widget_npv_MaxValue" format="reference|integer" />
        <attr name="widget_npv_WrapSelectorWheel" format="reference|boolean" />
        <attr name="widget_npv_RespondChangeOnDetached" format="reference|boolean" />
        <attr name="widget_npv_HintText" format="reference|string" />
        <attr name="widget_npv_EmptyItemHint" format="reference|string" />
        <attr name="widget_npv_MarginStartOfHint" format="reference|dimension" />
        <attr name="widget_npv_MarginEndOfHint" format="reference|dimension" />
        <attr name="widget_npv_ItemPaddingHorizontal" format="reference|dimension" />
        <attr name="widget_npv_ItemPaddingVertical" format="reference|dimension" />
        <attr name="widget_npv_RespondChangeInMainThread" format="reference|boolean" />
        <attr name="widget_npv_TextEllipsize" format="reference|string" />

        <!--just used to measure maxWidth for wrap_content without hint,
            the string array will never be displayed.
            you can set this attr if you want to keep the wraped numberpickerview
            width unchanged when alter the content list-->
        <attr name="widget_npv_AlternativeTextArrayWithMeasureHint" format="reference" />
        <attr name="widget_npv_AlternativeTextArrayWithoutMeasureHint" format="reference" />
        <!--the max length of hint content-->
        <attr name="widget_npv_AlternativeHint" format="reference|string" />
    </declare-styleable>

    <!--LabelView attr.xml 标签视图的标签值定义-->
    <declare-styleable name="widget_lableview">
        <attr name="widget_label_distance" format="dimension" />
        <attr name="widget_label_height" format="dimension"/>
        <attr name="widget_label_strokeWidth" format="dimension"/>
        <attr name="widget_label_backgroundColor" format="color"/>
        <attr name="widget_label_strokeColor" format="color"/>
        <attr name="widget_label_text" format="string"/>
        <attr name="widget_label_textSize" format="dimension" />
        <attr name="widget_label_textStyle" format="enum" >
            <enum name="NORMAL" value="0"/>
            <enum name="BOLD" value="1"/>
            <enum name="ITALIC" value="2"/>
            <enum name="BOLD_ITALIC" value="3"/>
        </attr>
        <attr name="widget_label_textColor" format="color"/>
        <attr name="widget_label_visual" format="boolean"/>
        <attr name="widget_label_orientation" format="enum">
            <enum name="LEFT_TOP" value="1"/>
            <enum name="RIGHT_TOP" value="2"/>
            <enum name="LEFT_BOTTOM" value="3"/>
            <enum name="RIGHT_BOTTOM" value="4"/>
        </attr>
    </declare-styleable>

    <!--AlterDialog attr.xml 通用alter的标签值定义-->
    <declare-styleable name="widget_rotate3d_animation">
        <attr name="widget_rollType" format="enum">
            <enum name="x" value="0"/>
            <enum name="y" value="1"/>
            <enum name="z" value="2"/>
        </attr>
        <attr name="widget_fromDeg" format="float" />
        <attr name="widget_toDeg" format="float" />
        <attr name="widget_pivotX" format="fraction"/>
        <attr name="widget_pivotY" format="fraction" />
    </declare-styleable>

    <declare-styleable name="widget_circle_progress">
        <attr name="widget_circle_progress" format="integer"/>
        <attr name="widget_circle_max" format="integer"/>

        <attr name="widget_circle_unfinished_color" format="color"/>
        <attr name="widget_circle_finished_color" format="color"/>

        <attr name="widget_circle_text_size" format="dimension"/>
        <attr name="widget_circle_text_color" format="color"/>

        <attr name="widget_circle_prefix_text" format="string"/>
        <attr name="widget_circle_suffix_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="widget_donut_progress">
        <attr name="widget_donut_progress" format="float"/>
        <attr name="widget_donut_max" format="integer"/>

        <attr name="widget_donut_unfinished_color" format="color"/>
        <attr name="widget_donut_finished_color" format="color"/>

        <attr name="widget_donut_finished_stroke_width" format="dimension"/>
        <attr name="widget_donut_unfinished_stroke_width" format="dimension"/>

        <attr name="widget_donut_text_size" format="dimension"/>
        <attr name="widget_donut_text_color" format="color"/>

        <attr name="widget_donut_prefix_text" format="string"/>
        <attr name="widget_donut_suffix_text" format="string"/>
        <attr name="widget_donut_text" format="string"/>

        <attr name="widget_donut_background_color" format="color"/>

        <attr name="widget_donut_inner_bottom_text" format="string"/>
        <attr name="widget_donut_inner_bottom_text_size" format="dimension"/>
        <attr name="widget_donut_inner_bottom_text_color" format="color"/>

        <attr name="widget_donut_circle_starting_degree" format="integer" />
        <attr name="widget_donut_show_text" format="boolean"/>
        <attr name="widget_donut_inner_drawable" format="reference"/>
        <attr name="widget_donut_clockWise" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="widget_arc_progress">
        <attr name="widget_arc_progress" format="integer"/>
        <attr name="widget_arc_angle" format="float"/>
        <attr name="widget_arc_stroke_width" format="dimension"/>
        <attr name="widget_arc_max" format="integer"/>

        <attr name="widget_arc_unfinished_color" format="color"/>
        <attr name="widget_arc_finished_color" format="color"/>

        <attr name="widget_arc_text_size" format="dimension"/>
        <attr name="widget_arc_text_color" format="color"/>

        <attr name="widget_arc_suffix_text" format="string"/>
        <attr name="widget_arc_suffix_text_size" format="dimension"/>
        <attr name="widget_arc_suffix_text_padding" format="dimension"/>

        <attr name="widget_arc_bottom_text" format="string"/>
        <attr name="widget_arc_bottom_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="widget_themes">
        <attr name="widget_circleProgressStyle" format="reference"/>
        <attr name="widget_donutProgressStyle" format="reference"/>
        <attr name="widget_arcProgressStyle" format="reference"/>
    </declare-styleable>


</resources>